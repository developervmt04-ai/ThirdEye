<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBgColor"
    android:padding="16dp">
    <!-- Main Card with Intruder Detection -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:backgroundTint="#3d4d6b">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Blurred Background Image (placeholder) -->
            <ImageView
                android:id="@+id/blurredImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
               />

            <!-- Intruder Icon and Text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/intruderIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/emptyicon"
                    android:tint="#d4a574" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/emptyIntrusion"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- Premium Badge -->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp"
                android:src="@drawable/prmium_icon" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainCard"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <!-- Add Widget Button -->
        <LinearLayout
            android:id="@+id/addWidgetBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/add_widget_icon"
                android:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Add_Widget"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Turn On Button (Power) -->
        <LinearLayout
            android:id="@+id/turnOnBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="4dp"
                android:backgroundTint="#2c3e5c">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"

                    android:tint="#4a90e2" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/turn_on"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Alarm Button -->
        <LinearLayout
            android:id="@+id/alarmBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/alram_icon"
                android:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Alarm"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Dropdown -->
    <TextView
        android:id="@+id/intruderDropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionButtons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/intruder"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:drawableEnd="@drawable/drop_dowon_icon"
        android:drawablePadding="4dp" />

</RelativeLayout>