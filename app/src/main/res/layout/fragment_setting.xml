<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.settings.SettingFragment"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/mainToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/appBgColor"
            app:title="@string/Alarm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <RelativeLayout
                android:id="@+id/toolbarContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/backIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ep_back"
                    android:clickable="true"
                    android:focusable="true"/>
                <TextView
                    android:id="@+id/toolbarTitle"
                    style="@style/ToobarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/backIcon"
                    android:layout_marginStart="12dp"
                    android:text="@string/settings"/>


            </RelativeLayout>

        </com.google.android.material.appbar.MaterialToolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height=".6dp"
            app:layout_constraintTop_toBottomOf="@id/mainToolbar"
            android:background="@color/dividerColor" />
    <LinearLayout

        android:padding="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/subtitle"
            android:text="@string/advance"
            android:layout_marginBottom="8dp"/>

        <!-- Card Background for Fingerprint Lock -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/cardBgColor">

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/fingerImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/fingerprinticon"
                    android:tint="@color/white"/>

                <LinearLayout
                    android:id="@+id/textContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/fingerImg"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fingerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/BoldText"
                        android:text="@string/finger_print_lock"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DescriptionText"
                        android:text="@string/protect_app_from_intruders"/>
                </LinearLayout>

                <!-- Hot Badge -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/hotBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/bioMetricSwitch"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#E53935">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hot"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />
                </androidx.cardview.widget.CardView>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/bioMetricSwitch"
                    app:thumbTint="@color/white"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout


        android:id="@+id/subscriptionLayout"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/subtitle"
            android:text="@string/subscriptions"
            android:layout_marginBottom="8dp"/>

        <!-- Card Background for Fingerprint Lock -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/cardBgColor">

            <RelativeLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/subscriptionImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/subscriptionicon"
                    android:tint="@color/white"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/subscriptionImg"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/BoldText"
                        android:text="@string/manage_subscriptions"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DescriptionText"
                        android:text="@string/your_plan_billing_and_renewal_info"/>
                </LinearLayout>

                <!-- Hot Badge -->

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/nexticon"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout


        android:padding="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/subtitle"
            android:text="@string/general"
            android:layout_marginBottom="8dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/cardBgColor">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/selfieAttempt"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/cardBgColor">

                    <RelativeLayout
                        android:id="@+id/selfieLayout"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/selfieIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/cameraicon"
                            android:tint="@color/white"/>

                        <LinearLayout
                            android:id="@+id/selfietextContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/selfieIcon"
                            android:layout_marginStart="16dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/BoldText"
                                android:text="@string/intruder_selfie"/>

                            <TextView
                                android:id="@+id/selfieDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/DescriptionText"
                                android:text="@string/take_photos_after_01_wrong_attempts"/>
                        </LinearLayout>



                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/nexticon"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"/>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".7dp"
                    android:padding="10dp"
                    android:background="@color/dividerColor" />
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/cardBgColor">

                    <RelativeLayout
                        android:id="@+id/delayLayout"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/delayIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/timericon"
                            android:tint="@color/white"/>

                        <LinearLayout
                            android:id="@+id/delayText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/delayIcon"
                            android:layout_marginStart="16dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/BoldText"
                                android:text="@string/picture_delay"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/DescriptionText"
                                android:text="@string/delayText"/>
                        </LinearLayout>


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/nexticon"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"/>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>
    <LinearLayout
        android:visibility="gone"

        android:padding="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/subtitle"
            android:text="@string/widget_setup"
            android:layout_marginBottom="8dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/cardBgColor">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/cardBgColor">

                    <RelativeLayout
                        android:id="@+id/addwidgeteLayout"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/addWidgetIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/add_widget_icon"
                            android:tint="@color/white"/>

                        <LinearLayout
                            android:id="@+id/addWidgetText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/addWidgetIcon"
                            android:layout_marginStart="16dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/BoldText"
                                android:text="@string/add_widget"/>


                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/nexticon"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"/>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".7dp"
                    android:padding="10dp"
                    android:background="@color/dividerColor" />
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/cardBgColor">

                    <RelativeLayout
                        android:id="@+id/howToAdd"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/questionIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/questionicon"
                            android:tint="@color/white"/>

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/questionIcon"
                            android:layout_marginStart="16dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/BoldText"
                                android:text="@string/how_to_add_widget"/>


                        </LinearLayout>


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/nexticon"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"/>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/subtitle"
                android:text="@string/about"
                android:layout_marginBottom="8dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/cardBgColor">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        android:layout_marginBottom="10dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="@color/cardBgColor">

                        <RelativeLayout
                            android:id="@+id/aboutLayout"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/rateusIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:tint="@color/white"/>

                            <LinearLayout
                                android:id="@+id/rateUs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/rateusIcon"
                                android:layout_marginStart="16dp"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <TextView

                                    style="@style/BoldText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rate Us" />


                            </LinearLayout>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/nexticon"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"/>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".7dp"
                        android:padding="10dp"
                        android:background="@color/dividerColor" />
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="@color/cardBgColor">

                        <RelativeLayout
                            android:id="@+id/shareLayout"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/shareIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_share"
                                android:tint="@color/white"/>

                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/shareIcon"
                                android:layout_marginStart="16dp"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/BoldText"
                                    android:text="@string/share"/>


                            </LinearLayout>


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/nexticon"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"/>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".7dp"
                        android:padding="10dp"
                        android:background="@color/dividerColor" />
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="@color/cardBgColor">

                        <RelativeLayout
                            android:id="@+id/termsOfUselayoyt"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/termsofUse"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_term_of_use"
                                android:tint="@color/white"/>

                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/termsofUse"
                                android:layout_marginStart="16dp"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/BoldText"
                                    android:text="@string/terms_of_use"/>


                            </LinearLayout>


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/nexticon"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"/>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".7dp"
                        android:padding="10dp"
                        android:background="@color/dividerColor" />
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="@color/cardBgColor">

                        <RelativeLayout
                            android:id="@+id/privacyPolicyLayout"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/privcyPolicy"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_privacy"
                                android:tint="@color/white"/>

                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/privcyPolicy"
                                android:layout_marginStart="16dp"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/BoldText"
                                    android:text="@string/privacy_policy"/>


                            </LinearLayout>


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/nexticon"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"/>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>





                </LinearLayout>
            </androidx.cardview.widget.CardView>





        </LinearLayout>

    </LinearLayout>








</ScrollView>