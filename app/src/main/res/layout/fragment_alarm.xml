<?xml version="1.0" encoding="utf-8"?>
<!-- Power Button with Ring Fill Effect -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Outer Ring (fills with color when ON) -->
        <View
            android:id="@+id/outerRing"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ring_off" />

        <!-- Power Button (Inner Circle) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/powerButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="35dp"
            app:cardElevation="4dp"
            android:backgroundTint="#2c3e5c"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/powerIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/power_on"
                 />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <!-- Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn On"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_marginTop="8dp" />

</LinearLayout>