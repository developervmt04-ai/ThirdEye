<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/appBgColor"
        app:title="@string/Alarm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <RelativeLayout
            android:id="@+id/toolbarContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ep_back"
                android:clickable="true"
                android:focusable="true"/>
            <TextView
                android:id="@+id/toolbarTitle"
                style="@style/ToobarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/backIcon"
                android:layout_marginStart="12dp"
                android:text="@string/Alarm"/>


        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height=".6dp"
        app:layout_constraintTop_toBottomOf="@id/mainToolbar"
        android:background="@color/dividerColor" />
    <LinearLayout
        android:id="@+id/Alarm"
        app:layout_constraintTop_toBottomOf="@id/mainToolbar"

        android:padding="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">



        <!-- Card Background for Fingerprint Lock -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/cardBgColor">

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/alarmImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/alram_icon"
                    android:tint="@color/white"/>

                <LinearLayout
                    android:id="@+id/textContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/alarmImg"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fingerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/BoldText"
                        android:text="@string/audible_alarm"/>


                </LinearLayout>


                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/bioMetricSwitch"
                    app:thumbTint="@color/white"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />
                <TextView

                    style="@style/DescriptionText"
                    android:layout_below="@id/alarmImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="If someone enter wrong pass"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout

        app:layout_constraintTop_toBottomOf="@id/Alarm"

        android:padding="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/subtitle"
            android:text="@string/configuration"
            android:layout_marginBottom="8dp"/>

        <!-- Card Background for Fingerprint Lock -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/cardBgColor">

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/musicImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/musicicon"
                    android:tint="@color/white"/>

                <LinearLayout
                    android:id="@+id/Container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/musicImg"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/BoldText"
                        android:text="@string/select_alarm"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DescriptionText"
                        android:text="@string/beep"/>
                </LinearLayout>




            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>








</androidx.constraintlayout.widget.ConstraintLayout>
